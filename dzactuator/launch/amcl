<?xml version="1.0" ?>
<!-- 定义ROS启动文件的根元素，用于启动多个节点 -->
<launch>

	<!-- 启动地图服务器节点，加载指定的地图文件 -->
	<node name="map_server" pkg="map_server" type="map_server" args="/home/duzhong/dzacs/src/resource/maps/newmap.yaml" output="screen"/>

	<!-- 启动自适应蒙特卡洛定位（AMCL）节点，用于机器人的定位 -->
	<node pkg="amcl" type="amcl" name="amcl" output="screen">
		<!-- 控制是否使用地图话题，设为 true 时，动态地图和SLAM场景，更新更灵活，但可能增加通信开销； -->
		<!--设为false表示不使用地图话题，适合静态地图场景，减少话题订阅的复杂性。  -->
		<param name="use_map_topic" value="false"/>
		<!-- 指定激光扫描数据的话题名称 -->
		<param name="scan_topic_" value="scan"/>
		<!-- 指定里程计模型类型，diff-corrected表示差分驱动修正模型 -->
		<param name="odom_model_type" value="diff-corrected"/>
		<!-- 里程计噪声参数，影响里程计旋转估计的噪声 -->
		<param name="odom_alpha5" value="0.1"/>
		<!-- 坐标变换的容差，单位为秒，用于处理时间同步问题 -->
		<param name="transform_tolerance" value="0.2" />
		<!-- 图形界面发布频率，单位为Hz，指定扫描和路径可视化的最大发布频率，-1.0表示禁用 -->
		<param name="gui_publish_rate" value="10.0"/> 
		<!-- 激光扫描时使用的最大激光束数量，用于减少计算量 -->
		<param name="laser_max_beams" value="60"/>
		<!-- 粒子滤波器中允许的最小粒子数量 -->
		<param name="min_particles" value="500"/>
		<!-- 粒子滤波器中允许的最大粒子数量 -->
		<param name="max_particles" value="800"/>
		<!-- KLD采样误差容限，用于动态调整粒子数量 -->
		<param name="kld_err" value="0.05"/>
		<!-- KLD采样置信度，用于动态调整粒子数量 -->
		<param name="kld_z" value="0.99"/>
		<!-- 里程计噪声参数，指定由机器人旋转运动引起的里程计旋转估计的噪声 -->
		<param name="odom_alpha1" value="0.3"/> 
		<!-- 里程计噪声参数，指定由机器人平移运动引起的里程计旋转估计的噪声 -->
		<param name="odom_alpha2" value="1.2"/> 
		<!-- 里程计噪声参数，指定由机器人平移运动引起的里程计平移估计的噪声 -->
		<param name="odom_alpha3" value="3.7"/> 
		<!-- 里程计噪声参数，指定由机器人旋转运动引起的里程计平移估计的噪声 -->
		<param name="odom_alpha4" value="0.3"/> 
		<!-- 激光传感器模型参数，激光击中物体的概率 -->
		<param name="laser_z_hit" value="0.5"/>
		<!-- 激光传感器模型参数，激光短反射的概率 -->
		<param name="laser_z_short" value="0.05"/>
		<!-- 激光传感器模型参数，激光测量值达到最大值的概率 -->
		<param name="laser_z_max" value="0.05"/>
		<!-- 激光传感器模型参数，激光随机测量的概率 -->
		<param name="laser_z_rand" value="0.5"/>
		<!-- 激光传感器模型参数，激光击中物体时的噪声标准差 -->
		<param name="laser_sigma_hit" value="0.2"/>
		<!-- 激光传感器模型参数，激光短反射的衰减率 -->
		<param name="laser_lambda_short" value="0.1"/>
		<!-- 指定激光传感器模型类型，likelihood_field表示似然场模型 -->
		<param name="laser_model_type" value="likelihood_field"/>
		<!-- 注释掉的激光传感器模型类型，beam表示光束模型 -->
		<!-- <param name="laser_model_type" value="beam"/> -->
